{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-console": "off",
      "indent": [ "error", 2 ],
      "quotes": ["error", "single", { "allowTemplateLiterals": true }],
      "comma-dangle": ["error", "always-multiline"],
      "semi": [ "error", "always" ],
      "no-unused-vars": [1, {"vars": "local", "args": "none"}]

    }
}